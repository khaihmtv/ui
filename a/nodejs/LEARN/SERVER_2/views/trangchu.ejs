<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Demo socket.IO</title>
    <script src="jquery.js"></script>
    <script src="socket.io/socket.io.js"></script>

    <script>

    var socket = io("http://localhost:3000");

    socket.on("ss",function(data){
        $("body").attr("bgColor",data);
    });

    $(document).ready(function(){
        $("#do").click(function(){
            socket.emit("cs","red");
        });
        $("#xanh").click(function(){
            socket.emit("cs","green");
        });
        $("#vang").click(function(){
            socket.emit("cs","yellowgreen");
        });

    });

    </script>

    <style>
        #do, #xanh, #vang {width:300px; height:70px}
        #do {background-color: red}
        #xanh {background-color: green}
        #vang {background-color: yellowgreen}    
    </style>
</head>

<body bgColor="pink">
    <div id="do"></div>
    <div id="xanh"></div>
    <div id="vang"></div>
</body>
</html>
